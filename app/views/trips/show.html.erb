<h4>Destination: <%=@trip.destination%><h4>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(@trip, :html => {class: "form-horizontal", role: "form"}) do |t|%>
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= t.label :start_date %>
        </div>
        <div class="col-sm-2">
          <%= t.date_field :start_date, class: "form-control", placeholder: "Trip start date", autofocus: true%>
        </div>
      </div>
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= t.label :end_date %>
        </div>
        <div class="col-sm-2">
          <%= t.date_field :end_date, class: "form-control", placeholder: "Trip start date", autofocus: true%>
        </div>
        <div class= "trip-actions">
        <%= link_to "Add Pictures", new_trip_picture_path(@trip), class: "btn btn-primary btn-xs" %>
        <%= link_to "Edit", edit_trip_path(@trip), class: "btn btn-xs btn-primary"  %>
        <%= link_to "Delete",trip_path(@trip), method: :delete, data: {confirm: "Are you sure you want to delete this trip?"}, class: "btn btn-xs btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
<div class= "container">
<% @trip.pictures.each do |picture| %>
  <p><%= image_tag picture.image.url(:medium) %></p>
  <p><%= picture.caption %></p>
<% end %>
</div>

<div class="container">
  <h3>Create New Comment</h3>
  <%= form_for @comment, url: trip_comments_path(@trip) do |f| %>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %><br>
  </div>
  <p><%= f.submit "Publish Tip"%></p>
  <% end %>
</div>

<div class="container">
  <h3>All Comments</h3>
  <% @trip.comments.each do |comment| %>
    <div class="row">
      <%= comment.body %>
      <div class="row">
      <div class="col-xs-2 col-sm-1">
      <section class="vote-widget">
        <%= upvote_link comment %>
        <h2><%= comment.vote_value %></h2>
        <%= downvote_link comment %>
      </section>
      </div>
    </div>
    <hr>
  <% end %>
</div>
