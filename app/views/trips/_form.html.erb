<div class = "row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @trip do |t| %>
      <div class="form-group">
        <%= t.label :destination %>
        <%= t.text_field :destination, class: "form_control", placeholder: "Where to?" %>
      </div>
      <div class="form-group">
        <%= t.label :start_date%>
        <%= t.date_field :start_date, class: "form_control" %>
      </div>
        <div class="form-group">
          <%= t.label :end_date%>
          <%= t.date_field :end_date, class: "form_control" %>
        </div>
        <%= t.submit(:class => "btn btn-primary") %>
    <% end %>
