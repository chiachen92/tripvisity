<%= render 'shared/errors', obj: @trip %>
<br>
<div class = "row">
 <div class="col-xs-8 col-xs-offset-3 ">
   <%= form_for(@trip, html: { multipart: true, class: "form-horizontal", role: "form"}) do |t| %>
     <div class = "form-group">
       <div class="control-label col-sm-2">
         <%= t.label :destination %>
       </div>
       <div class="col-sm-6">
         <%= t.text_field :destination, class: "form-control", placeholder: "Where to?", autofocus: true %>
       </div>
     </div>

     <div class = "form-group">
       <div class="control-label col-sm-2">
         <%= t.label :start_date %>
       </div>
       <div class="col-sm-6">
         <%= t.date_field :start_date, class: "form-control" %>
       </div>
     </div>

     <div class = "form-group">
       <div class="control-label col-sm-2">
         <%= t.label :end_date %>
       </div>
       <div class="col-sm-6">
         <%= t.date_field :end_date, class: "form-control" %>
       </div>
     </div>
     <br>
     <div class = "form-group">
       <div class="col-sm-offset-4 col-sm-10">
         <%= t.submit(:class => "btn btn-primary btn-lg") %>
       </div>
     </div>
   <% end %>
 </div>
</div>
